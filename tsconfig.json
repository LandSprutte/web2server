{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist/",
    "sourceRoot": "server/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "lib": ["esnext"],
    "pretty": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules"
  ]
}
